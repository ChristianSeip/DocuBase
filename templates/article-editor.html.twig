{% extends 'base.html.twig' %}

{% block title %}{{ 'article_editor_page.title'|trans }}{% endblock %}

{% block body %}
    <script src="{{ asset('js/tinymce/tinymce.min.js') }}"></script>
    <script>
			tinymce.init({
				selector: "#article_text",
                style_formats: [
                    {title: 'Heading 1', format: 'h2'},
                    {title: 'Heading 2', format: 'h3'},
                    {title: 'Heading 3', format: 'h4'},
                    {title: 'Normal', block: 'div'}
                ],
                menubar: false,
				plugins: "lists link",
				toolbar: "undo redo | styles | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link",
				block_formats: "Paragraph=p; Heading 2=h2; Heading 3=h3; Heading 4=h4",
				height: 300,
				branding: false,
				license_key: "gpl"
			});
    </script>
    <header class="mb-6">
        <h1>{{ 'article_editor_page.title'|trans }}</h1>
    </header>

    {{ form_start(articleForm) }}
    {{ form_row(articleForm.category) }}
    {{ form_row(articleForm.title) }}
    {{ form_row(articleForm.text) }}
    {{ form_row(articleForm._token) }}
    <button type="submit" class="btn btn-primary btn-block mt-5">{{ 'save_button'|trans }}</button>
    {{ form_end(articleForm) }}
{% endblock %}
